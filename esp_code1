import machine 
import time
import dht 
import dronekit
import datetime
import pymavlink

dht_pin=machine.pin('mention the pin ')
dht_sensor=dht.DHT11('enter the dht pin')

connection=pymavlink.MAVLink(0,0)
connection.mavlink_set_mode(0,0,0)

def season(month):
    if month in [12,1,2]:
        return("winter")
    elif month in [3,4,5]:
        return("Spring")
    elif month in [6,7,8]:
        return("Summer")
    elif month in [9,10,11]:
        return("fall")
    else:
        return("unkown")

def fly(season,temp,hum):
    if hum>85:
        return(False)
    
    if season=="winter":
        return temp>0
    elif season == "Summer":
        return 20<=temp<=32
    elif season == "fall":
        return 0<=temp<=30
    elif season == "Spring":
        return 0<=temp<=30
    else:
        return False
    
def mavlink(fly):
    if fly:
        connection.mavlink_set_mode(0,0,1)
        print("Sending MAVLink message: Can fly")
    else:
         connection.mavlink_set_mode(0,0,0)
         print("Sending MAVLink message: Cannot fly")

    

while True :
        try:

            dht_sensor.measure()
            tem=dht_sensor.temperature()
            hum=dht_sensor.humidity()

            now = datetime.datetime.now()
            current_month = now.month
            season1 = season(current_month)

            if fly(season, tem, hum):
                flight_status = "Can Fly"
            else:
                flight_status = "Cannot Fly"

            mavlink(fly(season,tem,hum))

            print('Temperature: {}Â°C  Humidity: {}%'.format(temperature, humidity))
        except OSError as e:
            print('Failed to read sensor.')
    
